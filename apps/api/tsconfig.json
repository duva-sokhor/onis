{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "lib": ["esnext"],
    "strict": true,
    "module": "CommonJS",
    "target": "ES2021",
    "sourceMap": false,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
  }
}
