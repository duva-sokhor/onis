{
  "name": "@onis/api",
  "license": "MIT",
  "main": "src/server.ts",
  "scripts": {
    "build": "pnpm -s run clean && tsc && tsc-alias && pnpm run build:schema",
    "build:schema": "ts-node src/schema/index.ts",
    "clean": "rm -rf dist",
    "dev": "tsnd -r tsconfig-paths/register --no-notify --respawn --transpile-only src/server",
    "start": "node dist/server"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "@apollo/server": "^4.7.4",
    "@onis/prisma": "*",
    "@pothos/core": "3.30.0",
    "@pothos/plugin-prisma": "3.52.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "graphql": "16.6.0",
    "graphql-scalars": "1.22.2",
    "graphql-yoga": "3.9.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "18.16.17",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "tsc-alias": "^1.8.6",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.9.5"
  }
}
